if [[ $OSTYPE != *"darwin"* || ! -n "$ITERM_SESSION_ID" ]]; then
    echo "Error: Not MacOS or not using iTerm. Exiting" >&2
    return 1
fi


NAME=''
X=100
Y=25

if [ "$#" -ge 1 ]; then NAME=$1 ; fi
if [ "$#" -ge 2 ]; then X=$2 ; fi
if [ "$#" -ge 3 ]; then Y=$3 ; fi


# Simple: assume first project window (0-based)
export PROJECT_WINDOW_NUM=0
if [ ${SHELL##*/} = "bash" ]; then
    prec=''
    postc=''
elif [ ${SHELL##*/} = "zsh" ]; then
    # if setopt | grep -c histignorespace ; then
    if [[ $options[histignorespace] = on ]]; then
        prec=''
        postc=''
    else
        prec='setopt HIST_IGNORE_SPACE'
        postc='unsetopt HIST_IGNORE_SPACE'
    fi
else
    (>&2 echo "Error: current shell '$SHELL' not supported")
    exit 1
fi
precommands=(\
    " $prec"\
    " export PROJECT_NAME=$PROJECT_NAME" \
    " export ITERM_PROFILE=$ITERM_PROFILE" \
    " export PROJECT_WINDOW_NUM=$PROJECT_WINDOW_NUM" \
    " setupHistory"\
    " $postc"\
    
    )

arr2=()
if ! [ -t 0 ]; then
    while IFS=$'\n' read -r line_data; do
        arr2+=("${line_data}")
    done;
fi
combined=("${precommands[@]}" "${arr2[@]}")
arr=()
for e in "${combined[@]}"
do
    arr=("${e}" "${arr[@]}")
done

printf -v ARGS "write text \"%s\" & " "${arr[@]}"
ARGS=${ARGS% & }

TARGET_PROFILE="${ITERM_PROFILE:-Default}"
if ! osascript >/dev/null 2>&1 <<EOF
    tell application "iTerm"
        activate
        set term to create window with profile "$TARGET_PROFILE"
        tell term
            activate current session
            launch session "Default Session"
            tell the current session
                select
                set columns to $X
                set rows to $Y
                $ARGS
            end tell
        end tell
    end tell
EOF
then
    # Fallback when custom profile does not exist in iTerm.
    osascript >/dev/null 2>&1 <<EOF
    tell application "iTerm"
        activate
        set term to create window with profile "Default"
        tell term
            activate current session
            launch session "Default Session"
            tell the current session
                select
                set columns to $X
                set rows to $Y
                $ARGS
            end tell
        end tell
    end tell
EOF
fi
